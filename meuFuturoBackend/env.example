# MeuFuturo API Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# API Configuration
# =============================================================================
PROJECT_NAME=MeuFuturo API
VERSION=1.0.0
DESCRIPTION=Sistema de gest√£o financeira pessoal com foco em acessibilidade
API_V1_PREFIX=/api/v1

# =============================================================================
# Environment
# =============================================================================
ENVIRONMENT=development
# Options: development, staging, production, testing

# =============================================================================
# Security
# =============================================================================
# Generate a secure secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/meufuturo
TEST_DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/meufuturo_test

# =============================================================================
# CORS Configuration
# =============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://meufuturo.com

# =============================================================================
# External APIs
# =============================================================================
# OpenAI API for AI features
OPENAI_API_KEY=your-openai-api-key-here

# Exchange rate API for currency conversion
EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key-here

# =============================================================================
# Email Configuration
# =============================================================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json
# Options: json, console

# =============================================================================
# AI/ML Configuration
# =============================================================================
AI_PREDICTION_ENABLED=true
AI_CONFIDENCE_THRESHOLD=0.7

# =============================================================================
# Financial Constants
# =============================================================================
DEFAULT_CURRENCY=BRL
MAX_TRANSACTION_AMOUNT=1000000.00
MIN_TRANSACTION_AMOUNT=0.01

# =============================================================================
# Pagination
# =============================================================================
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# Cache Configuration
# =============================================================================
CACHE_BACKEND=memory
# Options: memory, redis
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Monitoring and Health Checks
# =============================================================================
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
PROMETHEUS_PORT=9090

# =============================================================================
# File Upload
# =============================================================================
MAX_FILE_SIZE=10485760
# 10MB in bytes
UPLOAD_DIRECTORY=uploads
TEMP_DIRECTORY=temp

# =============================================================================
# Development Settings
# =============================================================================
DEBUG=true
RELOAD=true
HOST=0.0.0.0
PORT=8000

# =============================================================================
# Production Settings
# =============================================================================
# Uncomment and configure for production
# DEBUG=false
# RELOAD=false
# HOST=0.0.0.0
# PORT=8000
# LOG_LEVEL=WARNING
# ENVIRONMENT=production